<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AddItem.AddItemFragment">

    <TextView
        android:id="@+id/text_additem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="@string/text_addItem_Top"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_additem"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:text="@string/button_addItem_Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />

    <EditText
        android:id="@+id/input_additem_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="24dp"
        android:ems="12"
        android:inputType="text"
        android:text="@string/input_field_defaultName"
        android:textColor="@android:color/tertiary_text_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_additem" />

    <EditText
        android:id="@+id/input_additem_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="12"
        android:inputType="text"
        android:text="@string/input_field_defaultCategory"
        android:textColor="@android:color/tertiary_text_light"
        app:layout_constraintStart_toStartOf="@+id/input_additem_name"
        app:layout_constraintTop_toBottomOf="@+id/input_additem_name" />

    <CheckBox
        android:id="@+id/checkbox_additem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/input_tickbox_text"
        android:textColor="@color/color_black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/input_additem_category"
        app:layout_constraintTop_toBottomOf="@+id/input_additem_category" />

</androidx.constraintlayout.widget.ConstraintLayout>